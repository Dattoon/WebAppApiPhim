@model IEnumerable<WatchHistory>
@{
    ViewData["Title"] = "Lịch sử xem";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
    var totalItems = ViewBag.TotalItems;
}

<div class="container mt-4">
    <div class="section-title d-flex justify-content-between align-items-center">
        <div>
            <h2>Lịch sử xem</h2>
            <p>Tổng cộng: @totalItems phim</p>
        </div>
        @if (Model.Any())
        {
            <button id="clearHistoryBtn" class="btn btn-outline-danger">
                <i class="fas fa-trash-alt me-2"></i> Xóa lịch sử
            </button>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary">
            <p>Bạn chưa xem phim nào.</p>
            <p>Hãy khám phá các bộ phim và bắt đầu xem ngay!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">
                <i class="fas fa-film me-2"></i> Khám phá phim
            </a>
        </div>
    }
    else
    {
        <div class="history-list">
            @foreach (var item in Model)
            {
                <div class="history-item">
                    <div class="row">
                        <div class="col-md-2 col-sm-3">
                            <a asp-controller="Movie" asp-action="Detail" asp-route-slug="@item.MovieSlug">
                                <img src="@(item.MoviePosterUrl ?? "/placeholder.svg?height=450&width=300")" 
                                     alt="@item.MovieName"
                                     class="img-fluid rounded"
                                     onerror="this.onerror=null; this.src='/placeholder.svg?height=450&width=300';">
                            </a>
                        </div>
                        <div class="col-md-10 col-sm-9">
                            <h5 class="mb-2">
                                <a asp-controller="Movie" asp-action="Detail" asp-route-slug="@item.MovieSlug" class="text-light">
                                    @item.MovieName
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(item.EpisodeName))
                            {
                                <p class="mb-2">
                                    <span class="badge bg-primary">@item.EpisodeName</span>
                                </p>
                            }
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="progress-container">
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" role="progressbar" 
                                             style="width: @(item.WatchedPercentage)%;" 
                                             aria-valuenow="@item.WatchedPercentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted">Đã xem: @(Math.Round(item.WatchedPercentage))%</small>
                                </div>
                                <small class="text-muted">@item.WatchedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            <div class="mt-2">
                                <a asp-controller="Movie" asp-action="Watch" asp-route-slug="@item.MovieSlug" asp-route-episode="@item.EpisodeSlug" class="btn btn-sm btn-primary">
                                    <i class="fas fa-play-circle me-1"></i> Tiếp tục xem
                                </a>
                                <a asp-controller="Movie" asp-action="Detail" asp-route-slug="@item.MovieSlug" class="btn btn-sm btn-outline-light ms-2">
                                    <i class="fas fa-info-circle me-1"></i> Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (totalPages > 1)
        {
            <div class="pagination-container">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="User" asp-action="WatchHistory" asp-route-page="1" aria-label="First">
                                    <span aria-hidden="true">&laquo;&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-controller="User" asp-action="WatchHistory" asp-route-page="@(currentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        
                        @{
                            int startPage = Math.Max(1, currentPage - 2);
                            int endPage = Math.Min(totalPages, startPage + 4);
                            
                            if (endPage - startPage < 4)
                            {
                                startPage = Math.Max(1, endPage - 4);
                            }
                        }
                        
                        @for (int i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-controller="User" asp-action="WatchHistory" asp-route-page="@i">@i</a>
                            </li>
                        }
                        
                        @if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="User" asp-action="WatchHistory" asp-route-page="@(currentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-controller="User" asp-action="WatchHistory" asp-route-page="@totalPages" aria-label="Last">
                                    <span aria-hidden="true">&raquo;&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    }
</div>

<!-- Modal xác nhận xóa lịch sử -->
<div class="modal fade" id="confirmClearModal" tabindex="-1" aria-labelledby="confirmClearModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="confirmClearModalLabel">Xác nhận xóa lịch sử</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa toàn bộ lịch sử xem phim? Hành động này không thể hoàn tác.
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="clearHistoryForm" asp-controller="User" asp-action="ClearWatchHistory" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa lịch sử</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Xử lý nút xóa lịch sử
            $('#clearHistoryBtn').on('click', function() {
                var modal = new bootstrap.Modal(document.getElementById('confirmClearModal'));
                modal.show();
            });
            
            // Xử lý form xóa lịch sử
            $('#clearHistoryForm').on('submit', function(e) {
                e.preventDefault();
                
                var form = $(this);
                var url = form.attr('action');
                
                $.ajax({
                    type: 'POST',
                    url: url,
                    data: form.serialize(),
                    success: function(data) {
                        if (data.success) {
                            // Đóng modal và tải lại trang
                            $('#confirmClearModal').modal('hide');
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}

@section Styles {
    <style>
        .history-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        
        .history-item {
            background-color: #1a1a1a;
            border-radius: 8px;
            padding: 15px;
            transition: transform 0.2s;
        }
        
        .history-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        
        .progress-container {
            width: 200px;
        }
        
        @@media (max-width: 576px) {
            .progress-container {
                width: 100px;
            }
        }
    </style>
}
