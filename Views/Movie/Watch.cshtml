@model MovieDetailViewModel
@{
    ViewData["Title"] = $"Xem phim {Model.Movie?.Name}";
    var movie = Model.Movie;
    var currentEpisode = ViewBag.CurrentEpisode;
    string currentEpisodeLink = null;
    string currentEpisodeName = null;

    // Tìm link của tập hiện tại
    if (!string.IsNullOrEmpty(currentEpisode) && Model.Episodes != null)
    {
        var episode = Model.Episodes.FirstOrDefault(e => e.Slug == currentEpisode);
        if (episode != null)
        {
            currentEpisodeLink = episode.Link;
            currentEpisodeName = $"Tập {episode.Name}";
        }
    }
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-light">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Movie" asp-action="Detail" asp-route-slug="@movie.Slug" class="text-light">@movie.Name</a></li>
            <li class="breadcrumb-item active text-light" aria-current="page">@currentEpisodeName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-9">
            <!-- Video Player -->
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header bg-dark border-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@movie.Name - @currentEpisodeName</h5>
                    <div>
                        <a asp-controller="Movie" asp-action="Detail" asp-route-slug="@movie.Slug" class="btn btn-sm btn-outline-light">
                            <i class="fas fa-info-circle"></i> Chi tiết phim
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="video-container">
                        @if (!string.IsNullOrEmpty(currentEpisodeLink))
                        {
                            <iframe src="@currentEpisodeLink"
                                    allowfullscreen
                                    frameborder="0"
                                    scrolling="no"
                                    class="video-player"
                                    id="videoPlayer"></iframe>
                        }
                        else
                        {
                            <div class="no-video-message">
                                <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                                <h4>Không tìm thấy nguồn phát</h4>
                                <p>Vui lòng chọn một tập phim khác hoặc thử lại sau.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Episodes Section -->
            @if (Model.Episodes != null && Model.Episodes.Any())
            {
                <div class="card bg-dark border-secondary mb-4">
                    <div class="card-header bg-dark border-secondary">
                        <h5 class="mb-0">Danh sách tập phim</h5>
                    </div>
                    <div class="card-body">
                        <div class="episode-grid">
                            @foreach (var episode in Model.Episodes)
                            {
                                <a asp-controller="Movie"
                                   asp-action="Watch"
                                   asp-route-slug="@movie.Slug"
                                   asp-route-episode="@episode.Slug"
                                   class="episode-button @(episode.Slug == currentEpisode ? "active" : "")">
                                    Tập @episode.Name
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Movie Info -->
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="mb-0">Thông tin phim</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <img src="@(movie.PosterUrl ?? "/placeholder.svg?height=450&width=300")"
                                 alt="@movie.Name"
                                 class="img-fluid rounded"
                                 onerror="this.onerror=null; this.src='/placeholder.svg?height=450&width=300';">
                        </div>
                        <div class="col-md-8">
                            <h4>@movie.Name</h4>
                            @if (!string.IsNullOrEmpty(movie.OriginalName))
                            {
                                <h6 class="text-muted mb-3">@movie.OriginalName</h6>
                            }

                            <div class="movie-meta mb-3">
                                @if (!string.IsNullOrEmpty(movie.Year))
                                {
                                    <span class="badge bg-primary me-2">@movie.Year</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.Movie.Quality))
                                {
                                    <span class="badge bg-success me-2">@Model.Movie.Quality</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.Movie.Language))
                                {
                                    <span class="badge bg-info me-2">@Model.Movie.Language</span>
                                }
                            </div>

                            <div class="movie-info">
                                @if (movie.Genres != null && movie.Genres.Any())
                                {
                                    <p><strong>Thể loại:</strong> @string.Join(", ", movie.Genres)</p>
                                }
                                @if (!string.IsNullOrEmpty(movie.Country))
                                {
                                    <p><strong>Quốc gia:</strong> @movie.Country</p>
                                }
                                @if (!string.IsNullOrEmpty(movie.Duration))
                                {
                                    <p><strong>Thời lượng:</strong> @movie.Duration</p>
                                }
                                @if (!string.IsNullOrEmpty(movie.Director))
                                {
                                    <p><strong>Đạo diễn:</strong> @movie.Director</p>
                                }
                                @if (!string.IsNullOrEmpty(movie.Actors))
                                {
                                    <p><strong>Diễn viên:</strong> @movie.Actors</p>
                                }
                            </div>

                            <p>@movie.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <!-- Sidebar content can be added here later -->
        </div>
    </div>
</div>

@section Styles {
    <style>
        .video-container {
            position: relative;
            padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
            height: 0;
            overflow: hidden;
        }

        .video-player {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

        .no-video-message {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #1a1a1a;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        .episode-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
            gap: 10px;
        }

        .episode-button {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 8px;
            background-color: #2d2d2d;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            text-align: center;
            transition: all 0.2s;
        }

            .episode-button:hover {
                background-color: #3a3a3a;
                color: #fff;
            }

            .episode-button.active {
                background-color: #0d6efd;
                color: #fff;
            }
    </style>
}
