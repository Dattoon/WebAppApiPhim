@model MovieListResponse
@{
    ViewData["Title"] = $"Tìm kiếm: {ViewData["SearchKeyword"]}";
}

<div class="container">
    <h1 class="my-4">Kết quả tìm kiếm: @ViewData["SearchKeyword"]</h1>

    @if (Model?.Data == null || !Model.Data.Any())
    {
        <div class="alert alert-info">
            <h4>Không tìm thấy kết quả</h4>
            <p>Vui lòng thử từ khóa khác.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var movie in Model.Data)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="/placeholder.svg?height=450&width=300" class="card-img-top" alt="@movie.Name">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Name</h5>
                            <p class="card-text">
                                <small>Năm: @movie.Year</small><br />
                                <small>Loại: @movie.Loai_phim</small><br />
                                <small>Quốc gia: @movie.Quoc_gia</small>
                            </p>
                            <a asp-controller="Movie" asp-action="Detail" asp-route-slug="@movie.Slug" class="btn btn-primary">Xem Chi Tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Pagination != null && Model.Pagination.Total_pages > 0)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.Pagination.Total_pages; i++)
                    {
                        <li class="page-item @(i == Model.Pagination.Current_page ? "active" : "")">
                            <a class="page-link" asp-controller="Movie" asp-action="Search" asp-route-keyword="@ViewData["SearchKeyword"]" asp-route-page="@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>