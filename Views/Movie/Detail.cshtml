@model MovieDetailViewModel
@{
    ViewData["Title"] = Model?.Movie?.Name ?? "Chi tiết phim";
}

@if (Model?.Movie == null)
{
    <div class="container">
        <div class="alert alert-warning">
            <h4>Không tìm thấy thông tin phim</h4>
            <p>Rất tiếc, chúng tôi không thể tìm thấy thông tin phim bạn yêu cầu.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Về trang chủ</a>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="movie-details">
            <div class="row">
                <div class="col-md-3">
                    <div class="movie-poster mb-3">
                        <img src="@(Model.Movie.PosterUrl ?? "/placeholder.svg?height=450&width=300")" class="img-fluid rounded" alt="@Model.Movie.Name">
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button id="favoriteBtn" class="btn btn-outline-light w-100 mb-2" data-slug="@Model.Movie.Slug" data-name="@Model.Movie.Name">
                            <i class="@(Model.IsFavorite ? "fas" : "far") fa-heart me-2"></i>
                            @(Model.IsFavorite ? "Đã yêu thích" : "Yêu thích")
                        </button>
                    }
                    <a href="#episodes" class="btn btn-primary w-100">
                        <i class="fas fa-play me-2"></i> Xem phim
                    </a>
                </div>
                <div class="col-md-9">
                    <div class="movie-info">
                        <h1>@Model.Movie.Name</h1>
                        <div class="subtitle">
                            @if (!string.IsNullOrEmpty(Model.Movie.OriginalName))
                            {
                                <span>@Model.Movie.OriginalName</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Movie.Year))
                            {
                                <span> (@Model.Movie.Year)</span>
                            }
                        </div>

                        <div class="badges">
                            @if (!string.IsNullOrEmpty(Model.Movie.Type))
                            {
                                <span class="badge bg-primary">@Model.Movie.Type</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Movie.Status))
                            {
                                <span class="badge bg-secondary">@Model.Movie.Status</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Movie.Country))
                            {
                                <span class="badge bg-info">@Model.Movie.Country</span>
                            }
                            @if (Model.Movie.Genres != null)
                            {
                                foreach (var genre in Model.Movie.Genres)
                                {
                                    <span class="badge bg-success">@genre</span>
                                }
                            }
                        </div>

                        <div class="description mt-3">
                            <h5>Nội dung phim</h5>
                            <p>@Html.Raw(Model.Movie.Description)</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Movie.Director))
                        {
                            <div class="mt-3">
                                <strong>Đạo diễn:</strong> @Model.Movie.Director
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Movie.Actors))
                        {
                            <div class="mt-2">
                                <strong>Diễn viên:</strong> @Model.Movie.Actors
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Movie.Duration))
                        {
                            <div class="mt-2">
                                <strong>Thời lượng:</strong> @Model.Movie.Duration
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Movie.Quality))
                        {
                            <div class="mt-2">
                                <strong>Chất lượng:</strong> @Model.Movie.Quality
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Movie.Language))
                        {
                            <div class="mt-2">
                                <strong>Ngôn ngữ:</strong> @Model.Movie.Language
                            </div>
                        }

                        @if (Model.WatchHistory != null)
                        {
                            <div class="alert alert-info mt-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span>Bạn đã xem đến: @Model.WatchHistory.WatchedPercentage.ToString("0.0")%</span>
                                    <button class="btn btn-sm btn-primary" id="continueWatchingBtn">Tiếp tục xem</button>
                                </div>
                                <div class="progress mt-2" style="height: 5px;">
                                    <div class="progress-bar" role="progressbar" style="width: @(Model.WatchHistory.WatchedPercentage)%;"
                                         aria-valuenow="@Model.WatchHistory.WatchedPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div id="episodes" class="mt-4">
            <div class="section-title">
                <h2>Xem phim @Model.Movie.Name</h2>
            </div>

            <div class="video-container">
                <div class="ratio ratio-16x9">
                    <iframe id="videoPlayer" src="/placeholder.svg" allowfullscreen></iframe>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0">Danh sách tập phim</h5>
                <div class="server-selection">
                    <select id="serverSelect" class="form-select form-select-sm bg-dark text-light border-secondary">
                        <option selected>Server #1</option>
                        <option>Server #2</option>
                        <option>Server #3</option>
                    </select>
                </div>
            </div>

            <div class="episode-list">
                @if (Model.Episodes != null && Model.Episodes.Any())
                {
                    foreach (var episode in Model.Episodes)
                    {
                        <div class="episode-item" data-slug="@episode.Slug" data-link="@episode.Link" data-name="@Model.Movie.Name">
                            @episode.Name
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning w-100">
                        Không có tập phim nào.
                    </div>
                }
            </div>
        </div>

        <div class="mt-5">
            <div class="section-title">
                <h2>Bình luận</h2>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Movie" asp-action="AddComment" method="post" class="mb-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="slug" value="@Model.Movie.Slug" />
                    <div class="mb-3">
                        <textarea name="content" class="form-control bg-dark text-light border-secondary" rows="3" placeholder="Viết bình luận của bạn..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Gửi bình luận</button>
                </form>
            }
            else
            {
                <div class="alert alert-dark">
                    Vui lòng <a asp-controller="Account" asp-action="Login" class="alert-link">đăng nhập</a> để bình luận.
                </div>
            }

            <div class="comments-list">
                @if (Model.Comments != null && Model.Comments.Count > 0)
                {
                    foreach (var comment in Model.Comments)
                    {
                        <div class="comment-item">
                            <div class="comment-header">
                                <img src="/images/avatar.png" alt="@comment.Username" class="comment-avatar">
                                <div class="comment-user">@comment.Username</div>
                                <div class="comment-date">@comment.CreatedAt</div>
                            </div>
                            <div class="comment-content">
                                @comment.Content
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-secondary py-4">
                        <i class="far fa-comment-dots fa-3x mb-3"></i>
                        <p>Chưa có bình luận nào. Hãy là người đầu tiên bình luận!</p>
                    </div>
                }
            </div>
        </div>

        @if (Model.RelatedMovies != null && Model.RelatedMovies.Any())
        {
            <div class="mt-5">
                <div class="section-title">
                    <h2>Có thể bạn thích</h2>
                </div>

                <div class="movie-grid">
                    @foreach (var movie in Model.RelatedMovies)
                    {
                        <div class="movie-card">
                            <a asp-controller="Movie" asp-action="Detail" asp-route-slug="@movie.Slug">
                                <img src="@(movie.PosterUrl ?? movie.ThumbUrl ?? "/placeholder.svg?height=450&width=300")" alt="@movie.Name">
                                <div class="overlay">
                                    <div class="title">@movie.Name</div>
                                    <div class="info">
                                        @movie.Year • @movie.Loai_phim
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Hide video container initially
            $('.video-container').hide();

            // Handle episode click
            $('.episode-item').click(function () {
                const link = $(this).data('link');
                const slug = $(this).data('slug');
                const name = $(this).data('name');

                // Remove active class from all episodes
                $('.episode-item').removeClass('active');
                // Add active class to clicked episode
                $(this).addClass('active');

                // Show video container
                $('.video-container').show();

                // Set video source
                $('#videoPlayer').attr('src', link);

                // Scroll to video
                $('html, body').animate({
                    scrollTop: $(".video-container").offset().top - 80
                }, 500);

                // Track watch progress if user is logged in
                if ('@User.Identity.IsAuthenticated' === 'True') {
                    trackWatchProgress(slug, name);
                }
            });

            // Handle continue watching button
            $('#continueWatchingBtn').click(function () {
                // Find the first episode and click it
                $('.episode-item').first().click();
            });

            // Handle favorite button
            $('#favoriteBtn').click(function () {
                const slug = $(this).data('slug');
                const name = $(this).data('name');

                $.ajax({
                    url: '@Url.Action("ToggleFavorite", "Movie")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    data: { slug: slug, name: name },
                    success: function (response) {
                        if (response.isFavorite) {
                            $('#favoriteBtn').html('<i class="fas fa-heart me-2"></i> Đã yêu thích');
                        } else {
                            $('#favoriteBtn').html('<i class="far fa-heart me-2"></i> Yêu thích');
                        }
                    }
                });
            });

            // Function to track watch progress
            function trackWatchProgress(slug, name) {
                // For simplicity, we'll update progress to 100%
                // In a real app, you'd track actual video progress
                $.ajax({
                    url: '@Url.Action("UpdateWatchProgress", "Movie")',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    data: {
                        slug: slug,
                        name: name,
                        percentage: 100
                    }
                });
            }

            // If there are episodes, click the first one to start playback
            if ($('.episode-item').length > 0) {
                // Check if there's a watch history to continue
                if ($('#continueWatchingBtn').length > 0) {
                    // Don't auto-play, let user click continue
                } else {
                    // Auto-play first episode
                    $('.episode-item').first().click();
                }
            }
        });
    </script>
}