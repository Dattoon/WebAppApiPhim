@using WebAppApiPhim.Models.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="mb-0">Tài khoản</h5>
                </div>
                <div class="list-group list-group-flush bg-dark">
                    <a asp-controller="Account" asp-action="Profile" class="list-group-item list-group-item-action bg-dark text-light active">
                        <i class="fas fa-user me-2"></i> Thông tin cá nhân
                    </a>
                    <a asp-controller="Account" asp-action="ChangePassword" class="list-group-item list-group-item-action bg-dark text-light">
                        <i class="fas fa-key me-2"></i> Đổi mật khẩu
                    </a>
                    <a asp-controller="User" asp-action="Favorites" class="list-group-item list-group-item-action bg-dark text-light">
                        <i class="fas fa-heart me-2"></i> Phim yêu thích
                    </a>
                    <a asp-controller="User" asp-action="WatchHistory" class="list-group-item list-group-item-action bg-dark text-light">
                        <i class="fas fa-history me-2"></i> Lịch sử xem
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card bg-dark border-secondary">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="mb-0">Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["StatusMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Account" asp-action="Profile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-3 text-center">
                                <div class="avatar-container mb-3">
                                    <img src="@(Model.AvatarUrl ?? "/images/default-avatar.png")" alt="Avatar" class="img-fluid rounded-circle" id="avatarPreview">
                                </div>
                                <div class="mb-3">
                                    <label for="avatarUpload" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-upload me-1"></i> Thay đổi ảnh
                                    </label>
                                    <input type="file" id="avatarUpload" name="avatarFile" class="d-none" accept="image/*">
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="mb-3">
                                    <label asp-for="DisplayName" class="form-label"></label>
                                    <input asp-for="DisplayName" class="form-control bg-dark text-light border-secondary" />
                                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input asp-for="Username" class="form-control bg-dark text-light border-secondary" readonly />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control bg-dark text-light border-secondary" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).ready(function () {
            // Xem trước ảnh đại diện khi chọn file
            $('#avatarUpload').on('change', function () {
                var file = this.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#avatarPreview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(file);
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        .avatar-container {
            width: 150px;
            height: 150px;
            margin: 0 auto;
            overflow: hidden;
            border-radius: 50%;
            border: 3px solid #343a40;
        }

            .avatar-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
    </style>
}
